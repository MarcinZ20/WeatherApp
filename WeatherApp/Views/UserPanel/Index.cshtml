                                <div class="col-8">
                                    <div class="p-2 bg-warning">
                                        3
                                    </div>
                                </div>
                            </div>*@
                    </div>
                </div>
                <div class="col-3">
                    <div class="p-3 rounded rounded-3 bg-light shadow">
                        <div class="row">
                            <div class="col-8">
                                <p>Cloud cover</p>
                            </div>
                            <div class="col-4">
                                <img src="https://basmilius.github.io/weather-icons/production/fill/all/overcast.svg" alt="cloud cover icon" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <h4>20%</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-3">
                    <div class="p-3 rounded rounded-3 bg-light shadow">
                        <div class="row">
                            <div class="col-8">
                                <p>UV index</p>
                            </div>
                            <div class="col-4">
                                <img src="https://basmilius.github.io/weather-icons/production/fill/all/uv-index.svg" alt="uv index icon" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <h4>20</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row p-5">
                <div class="container">

                </div>
            </div>
        </div>
    </div>
</div>