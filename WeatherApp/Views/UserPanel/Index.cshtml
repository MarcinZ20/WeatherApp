@{
    ViewData["Title"] = "UserPanel";
}

<div class="container">
    <div class="row py-3">
        <div class="col-3 order-2" id="sticky-sidebar">
            <div class="text-center rounded rounded-3 p-3 bg-light shadow mb-3 mt-3">
                <h1>@ViewData["miasto"]</h1>
                <p>@ViewData["data"]</p>
                <p>@ViewData["czas"]</p>
            </div>
            <div class="text-center rounded rounded-3 p-3 bg-light shadow">
                <img class="img rounded rounded-5 p-2" src="https://img.freepik.com/free-vector/businessman-character-avatar-isolated_24877-60111.jpg?size=626&ext=jpg&ga=GA1.2.1485105489.1680129457&semt=location_fest_v1" alt="profile picture" width="80" />
                <h3 class="text-primary">Kamil</h3>
                <i class="fa-solid fa-location-dot"></i>
                <p class="text-secondary">Kraków</p>
                <p>
                    Hi, my name is Kamil and I like football!
                </p>
                <hr />
                <h4>City to display</h4>
                <form method="post" action="/UserPanel/Index">
                    <select name="city" class="form-select mb-3" aria-label="Default select example">
                        <option selected value="Tokyo">Tokyo</option>
                        <option value="New York">New York</option>
                        <option value="Warsaw">Warsaw</option>
                        <option value="Paris">Paris</option>
                    </select>
                    <button class="btn btn-primary w-100" type="submit">Submit</button>
                </form>
            </div>
        </div>
        <div class="col-9" id="main">
            <div class="row p-3">
                <div class="col">
                    <div class="row g-2">
                        <div class="col-6">
                            <div class="p-3 rounded rounded-3 bg-light shadow">
                                <div class="row">
                                    <div class="col-8">
                                        <p>Temp.</p>
                                    </div>
                                    <div class="col-4">
                                        <img src="https://basmilius.github.io/weather-icons/production/fill/all/thermometer-celsius.svg" alt="temperature icon" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <h4>@ViewData["T"]°C</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-3 rounded rounded-3 bg-light shadow">
                                <div class="row">
                                    <div class="col-8">
                                        <p>Wind</p>
                                    </div>
                                    <div class="col-4">
                                        <img src="https://basmilius.github.io/weather-icons/production/fill/all/dust-wind.svg" alt="wind icon" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <h4>@ViewData["W"] km/h</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-3 rounded rounded-3 bg-light shadow">
                                <div class="row">
                                    <div class="col-8">
                                        <p>Humidity</p>
                                    </div>
                                    <div class="col-4">
                                        <img src="https://basmilius.github.io/weather-icons/production/fill/all/humidity.svg" alt="humidity icon" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <h4>@ViewData["H"]%</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="p-3 rounded rounded-3 bg-light shadow">
                                <div class="row">
                                    <div class="col-8">
                                        <p>Pressure</p>
                                    </div>
                                    <div class="col-4">
                                        <img src="https://basmilius.github.io/weather-icons/production/fill/all/barometer.svg" alt="pressure icon" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <h4>@ViewData["P"] hPa</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col text-center">
                    <div class="p-3 rounded rounded-3 bg-light shadow">
                        <div class="row p-2">
                            <div class="col-4">
                                <div class="p-1">Today</div>
                            </div>
                            <div class="col-4">
                                <div class="p-1">Tommorow</div>
                            </div>
                            <div class="col-4">
                                <div class="p-1">After tommorow</div>
                            </div>
                        </div>
                        <div class="row p-2">
                            <div class="col-4">
                                <div class="p-1">
                                    <img src="https://basmilius.github.io/weather-icons/production/fill/all/partly-cloudy-day-rain.svg" alt="rainy" width="70" />
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="p-1">
                                    <img src="https://basmilius.github.io/weather-icons/production/fill/all/partly-cloudy-day.svg" alt="part cloudy" width="70" />
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="p-1">
                                    <img src="https://basmilius.github.io/weather-icons/production/fill/all/thunderstorms-day-rain.svg" alt="rainy" width="70" />
                                </div>
                            </div>
                        </div>
                        <div class="row p-2">
                            <div class="col-4">
                                <div class="p-1">
                                    <h3>@ViewData["today"] °C</h3>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="p-1">
                                    <h3>@ViewData["tom"] °C</h3>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="p-1">
                                    <h3>@ViewData["atom"] °C</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row p-3">
                <div class="col-6">
                    <div class="p-3 rounded rounded-3 bg-light shadow text-center">
                        <div class="row">
                            <div class="col-6">
                                <div class="row">
                                    <div class="col">
                                        <p>Sunrise</p>
                                        <img src="https://basmilius.github.io/weather-icons/production/fill/all/sunrise.svg" width="65" alt="sunrise" />
                                    </div>
                                </div>
                                <div class="row">
                                    <h3>@ViewData["sunrise"]</h3>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="row">
                                    <div class="col">
                                        <p>Sunset</p>
                                        <img src="https://basmilius.github.io/weather-icons/production/fill/all/sunset.svg" width="65" alt="sunrise" />
                                    </div>
                                </div>
                                <div class="row">
                                    <h3>@ViewData["sunset"]</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-3">
                    <div class="p-3 rounded rounded-3 bg-light shadow">
                        <div class="row">
                            <div class="col-8">
                                <p>Cloud cover</p>
                            </div>
                            <div class="col-4">
                                <img src="https://basmilius.github.io/weather-icons/production/fill/all/overcast.svg" alt="cloud cover icon" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <h4>@ViewData["cloud"] %</h4>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-3">
                    <div class="p-3 rounded rounded-3 bg-light shadow">
                        <div class="row">
                            <div class="col-8">
                                <p>UV index</p>
                            </div>
                            <div class="col-4">
                                <img src="https://basmilius.github.io/weather-icons/production/fill/all/uv-index.svg" alt="uv index icon" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <h4>20</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
